<com.lx.todaysbing.widget.ScaleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<com.lx.todaysbing.widget.FitRatioImageView xmlns:riv="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/iv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="centerCrop"-->
        <!--riv:widthToheight="0.625"/>-->
    <com.va.imageviewkeepratio.ImageViewKeepRatio
        xmlns:va="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        va:width_height_ratio="1.5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/iv"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/tv_copyright_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="\@ VIEW STOCK RF/Age FotoStock"
        android:textColor="#888"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_copyright_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_copyright_right"
        android:layout_marginLeft="3dp"
        android:text="莲叶"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvNDaysAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="1 DAYS AGO"
        android:textColor="#fff"
        android:textStyle="bold" />

</com.lx.todaysbing.widget.ScaleRelativeLayout>